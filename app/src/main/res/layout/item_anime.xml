<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/animeCard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- GuideLine -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontalGL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7"/>
        <!-- Image -->
        <ImageView
            android:id="@+id/coverIv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/horizontalGL" />
        <!-- Content -->
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalGL"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/episodesTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Episodes 50"
                android:layout_marginTop="5dp"
                android:textAppearance="@android:style/TextAppearance.Small"
                />

            <TextView
                android:id="@+id/scoreTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score 10"
                android:layout_marginTop="5dp"
                android:textAppearance="@android:style/TextAppearance.Small"
                />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>